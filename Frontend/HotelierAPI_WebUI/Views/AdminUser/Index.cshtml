@using HotelierAPI_WebUI.DTOs.AppUserDTO
@model List<ResultAppUserDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    var count = 0;
}

<table class="table table-xs mb-0">
    <thead>
        <tr>
            <th>#</th>
            <th>Ad - Soyad</th>
            <th>Şehir</th>
            <th>Ülke</th>
            <th>Lokasyon</th>
            <th>Durum</th>
            <th>Cinsiyet</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
            <tr>
                <td>
                    @{
                        ++count;
                    }
                    @count
                </td>
                <td><img src="@item.ImageUrl" class="rounded-circle mr-3" width="50px" height="50px" alt="">@item.Name @item.Surname</td>
                <td>@item.City</td>
                <td>@item.Country</td>
                <td>@item.WorkLocationName</td>
                <td><div><div class="progress" style="height:6px"><div class="progress-bar bg-success" style="width:50%"></div></div></div></td>

    @if (item.Gender == "Erkek")
                {
                    <td>
                        <i class="fa fa-circle-o text-success mr-2"></i>
                        Erkek
                    </td>}
        @if (item.Gender == "Kadın")
        {
                        <td>
                            <i class="fa fa-circle-o text-danger mr-2"></i>
                            Kadın
                        </td>
        }

                    <td><a href="/AdminUser/DeleteUser/@item.Id" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
                    <td><a href="/AdminUser/UpdateUser/@item.Id" class="btn mb-1 btn-rounded btn-outline-warning">Güncelle</a></td>
        </tr>
    }
    </tbody>
    </table>
    <br />
    <a href="~/Register/Index/" class="btn btn-outline-primary">Ekle</a>