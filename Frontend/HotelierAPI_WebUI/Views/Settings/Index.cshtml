@using HotelierAPI_WebUI.Models.Setting
@model UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Index</h1>

<form method="post">
    <label>Adınız</label>
    <input type="text" class="form-control" asp-for="Name" /><br />
    <label>Soyadınız</label>
    <input type="text" class="form-control" asp-for="Surname" /><br />
    <label>E-Posta</label>
    <input type="text" class="form-control" asp-for="Email" /><br />
    <label>Kullanıcı Adı</label>
    <input type="text" class="form-control" asp-for="Username" readonly /><br />
    <label>Şifre</label>
    <input type="password" class="form-control" asp-for="Password" /><br />
    <label>Şifre (Tekrar)</label>
    <input type="password" class="form-control" asp-for="ConfirmPassword" /><br />
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>