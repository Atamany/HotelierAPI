@using HotelierAPI_EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    var count = 0;
}

<table class="table table-xs mb-0">
    <thead>
        <tr>
            <th>#</th>
            <th>Ad - Soyad</th>
            <th>Rol Ata</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@{
                ++count;
            }
@count</td>
            <td><img src="@item.ImageUrl" class="rounded-circle mr-3" width="50px" height="50px" alt="">@item.Name @item.Surname</td>
            <td><a href="/RoleAssign/AssignRole/@item.Id" class="btn mb-1 btn-rounded btn-outline-danger">Rol Ata</a></td>
        </tr>
                }
    </tbody>
</table>
