@using HotelierAPI_WebUI.Models.Role
@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    @for (int i=0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId" class="form-check-input" />
            <input type="hidden" asp-for="@Model[i].RoleName" class="form-check-input" />
            <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input" />
            <label class="form-check-label" for="@Model[i].RoleExist">@Model[i].RoleName</label>
        </div>
        }
        <br />
    <button type="submit" class="btn btn-success">Kaydet</button>
</form>

