@using HotelierAPI_WebUI.DTOs.BookingDTO
@model List<ResultLast6BookingDTO>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="table-responsive">
                        <table class="table table-xs mb-0">
                            <thead>
                                <tr>
                                    <th>Müşteri</th>
                                    <th>Mail</th>
                                    <th>Giriş Tarihi</th>
                                    <th>Çıkış Tarihi</th>
                                    <th>Yetişkin Sayısı</th>
                                    <th>Çocuk Sayısı</th>
                                    <th>Oda Sayısı</th>
                                    <th>Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Mail</td>
                                    <td>@item.CheckIn.ToShortDateString()</td>
                                    <td>@item.CheckOut.ToShortDateString()</td>
                                    <td>@item.AdultCount</td>
                                    <td>@item.ChildCount</td>
                                    <td>@item.RoomCount</td>
                                    @if(item.Status == "Onaylandı!"){<td><i class="fa fa-circle-o text-success  mr-2"></i> Onaylandı!</td>}
                                    @if(item.Status == "İptal Edildi!"){<td><i class="fa fa-circle-o text-danger  mr-2"></i> İptal Edildi</td>}
                                    @if(item.Status == "Onay Bekliyor!"){<td><i class="fa fa-circle-o text-warning  mr-2"></i> Onay Bekliyor!</td>}
                                </tr>}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
