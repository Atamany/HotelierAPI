@using HotelierAPI_WebUI.Models.Mail;
@model AdminMailViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <label>Alıcı Mail Adresi</label>
    <input type="email" class="form-control" asp-for="ReceiverMail" /><br />
    <label>Konu</label>
    <input type="text" class="form-control" asp-for="Subject" /><br />
    <label>Mesajınız</label>
    <textarea rows="5" class="form-control" asp-for="Body"></textarea><br />
    <button type="submit" class="btn btn-primary">Gönder</button>
</form>

