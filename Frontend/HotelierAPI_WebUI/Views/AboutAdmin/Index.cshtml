@using HotelierAPI_WebUI.DTOs.AboutDTO
@model List<ResultAboutDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutId</td>
            <td>@item.Title1</td>
            <td>@item.Title2</td>
            <td><a href="/AboutAdmin/UpdateAbout/@item.AboutId" class="btn mb-1 btn-rounded btn-outline-warning">Güncelle</a></td>
            <td><a href="#" class="btn mb-1 btn-rounded btn-outline-dark">Detaylar</a></td>
        </tr>
    }
</table>

