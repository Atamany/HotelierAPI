@using HotelierAPI_WebUI.DTOs.AboutDTO
@model UpdateAboutDTO
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
<form method="post">
    <input type="hidden" asp-for="AboutId" class="form-control" />
    <label>Başlık</label>
    <input type="text" asp-for="Title1" class="form-control" /><br />

    <label>Alt Başlık</label>
    <input type="text" asp-for="Title2" class="form-control" /><br />

    <label>İçerik</label>
    <textarea class="form-control" placeholder="Mesajınızı buraya yazın." asp-for="Content" style="height: 150px"></textarea><br />

    <input type="hidden" asp-for="RoomCount" class="form-control" />
    <input type="hidden" asp-for="StaffCount" class="form-control" />
    <input type="hidden" asp-for="CustomerCount" class="form-control" />

    <button class="btn btn-primary">Güncelle</button>
</form>



