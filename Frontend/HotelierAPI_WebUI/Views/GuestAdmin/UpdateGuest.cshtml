@using HotelierAPI_WebUI.DTOs.GuestDTO
@model UpdateGuestDTO
@{
    ViewData["Title"] = "UpdateGuest";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="GuestID" class="form-control" />
    <label>Ad</label>
    <input type="text" asp-for="Name" class="form-control" /><span asp-validation-for="Name" class="text-danger"></span><br />

    <label>Soyad</label>
    <input type="text" asp-for="Surname" class="form-control" /><span asp-validation-for="Surname" class="text-danger"></span><br />

    <label>Şehir</label>
    <input type="text" asp-for="City" class="form-control" /><span asp-validation-for="City" class="text-danger"></span><br />

    <label>TCKN</label>
    <input type="text" asp-for="TCKN" class="form-control" /><span asp-validation-for="TCKN" class="text-danger"></span><br />

    <label>Telefon</label>
    <input type="text" asp-for="Telefon" class="form-control" /><span asp-validation-for="Telefon" class="text-danger"></span><br />

    <label>E-Posta</label>
    <input type="email" asp-for="Mail" class="form-control" /><span asp-validation-for="Mail" class="text-danger"></span><br />

    <button class="btn btn-primary">Güncelle</button>
</form>



