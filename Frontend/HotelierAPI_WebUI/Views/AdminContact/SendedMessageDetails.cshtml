@using HotelierAPI_WebUI.DTOs.SendMessageDTO
@model GetSendMessageByIDDTO
@{
    ViewData["Title"] = "SendedMessageDetails";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="email-left-box">
    <a href="~/AdminContact/AddSendMessage/" class="btn btn-primary btn-block">Mesaj Gönder!</a>
    @await Html.PartialAsync("SidebarAdminContactPartial")
    <h5 class="mt-5 m-b-10">Kategoriler</h5>
    @await Html.PartialAsync("SidebarAdminContactCategoryPartial")
</div>
<div class="email-right-box">
    <div class="read-content">
        <div class="media pt-5">
            <img class="mr-3 rounded-circle" src="https://png.pngtree.com/png-clipart/20200224/original/pngtree-sending-message-outline-icon-png-image_5237478.jpg" width="50px" height="50px">
            <div class="media-body">
                <h5 class="m-b-3">@Model.ReceiverName (@Model.ReceiverMail)</h5>
                <p class="m-b-2">@Model.Date.ToShortDateString()</p>
            </div>

        </div>
        <hr>
        <div class="media mb-4 mt-1">
            <div class="media-body">
                <h4 class="m-0 text-primary">@Model.Title</h4>
            </div>
        </div>
        <p>@Model.Content</p>
        <hr>
    </div>
</div>
